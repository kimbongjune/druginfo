<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrugInformation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextGreyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/icon_unselected</item>
        <item name="boxStrokeColor">@color/icon_selected</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/icon_selected</item>
    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/soft_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_drugingo</item>
        <item name="windowSplashScreenAnimationDuration">10000</item>
        <!--<item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">@drawable/druginfo_brand</item>-->
        <item name="postSplashScreenTheme">@style/Theme.DrugInformation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/soft_blue</item>
    </style>
</resources>