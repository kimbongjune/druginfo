<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_drug_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="아스피린"
        android:textStyle="bold"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_drug_residual_count"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_drug_residual_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="잔여약 : 20개"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_drug_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_drug_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/tv_drug_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="매일 1회"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_drug_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_drug_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="오전 09:00\n오후12:00"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_drug_date"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/sw_eat_drug_beforehand_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:track="@drawable/switch_track_selector"
        android:thumb="@drawable/switch_thumb"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_drug_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>