<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="-5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/cv_round_layout"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_drug_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="아스피린"
                android:textColor="@color/kakao_black"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                app:layout_constraintWidth_percent=".7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_drug_residual_count"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_drug_name_remining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="아스피린"
                android:textColor="@color/kakao_black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:background="@drawable/tag_round_button"
                app:layout_constraintWidth_percent=".3"
                app:layout_constraintTop_toBottomOf="@+id/tv_drug_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_drug_residual_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="잔여약 : 20개"
                android:textColor="@color/kakao_black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_drug_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_drug_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".3" />

            <TextView
                android:id="@+id/tv_drug_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/kakao_black"
                android:paddingLeft="2dp"
                android:text="매일 1회"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_drug_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_drug_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/kakao_black"
                android:text="오전 09:00\n오후12:00"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@+id/tv_drug_date"
                app:layout_constraintEnd_toStartOf="@+id/sw_eat_drug_beforehand_cycle"/>

            <Switch
                android:id="@+id/sw_eat_drug_beforehand_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/switch_thumb"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_drug_time"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>