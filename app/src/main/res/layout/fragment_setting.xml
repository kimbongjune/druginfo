<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/right_gray"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.SettingFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_search_result_fragment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/border_bottom"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="설정"
            android:layout_gravity="center"
            android:gravity="center_vertical|center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_search_result_fragment">

        <TextView
            android:id="@+id/tv_app_info"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="앱 정보"
            android:gravity="center_vertical|left"
            android:textSize="13sp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_version_info_container"/>

        <LinearLayout
            android:id="@+id/ll_version_info_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_bottom_black"
            app:layout_constraintTop_toBottomOf="@+id/tv_app_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_open_source_library">

            <TextView
                android:id="@+id/tv_version_info_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="버전정보"
                android:textColor="@color/kakao_black"
                android:gravity="center_vertical|left"
                android:textSize="15sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tv_version_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="1.0"
                android:gravity="center_vertical|right"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:padding="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_open_source_library"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="오픈소스 라이브러리"
            android:textColor="@color/kakao_black"
            android:gravity="center_vertical|left"
            android:textSize="15sp"
            android:padding="10dp"
            android:background="@drawable/border_bottom_black"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_version_info_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_privacy_policy"/>

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="개인정보 취급방침"
            android:textColor="@color/kakao_black"
            android:gravity="center_vertical|left"
            android:textSize="15sp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            android:background="@drawable/border_bottom_black"
            app:layout_constraintTop_toBottomOf="@+id/tv_open_source_library"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>