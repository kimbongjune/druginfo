<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrugInformation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>  // cursor 색.
        <item name="android:colorAccent">@color/black</item>  // cursor 색.
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextGreyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"> // important : parent 를 이것으로.
        <item name="colorControlNormal">@color/icon_unselected</item>  // unFocus 상태일때 밑줄 색.
        <item name="boxStrokeColor">@color/icon_selected</item> // Focus 상태일때 밑줄 색.
        <item name="android:textCursorDrawable">@color/black</item>  // cursor 색.
        <item name="android:textColorHint">@color/black</item>  // hint 색
        <item name="hintTextColor">@color/icon_selected</item>   // floating hint 색
    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>